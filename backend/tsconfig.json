{
    "compilerOptions": {
      "target": "ES6",                          // Specify ECMAScript target version
      "module": "CommonJS",                     // Specify module code generation
      "rootDir": "./src",                       // Specify the root directory of input files
      "outDir": "./dist",                       // Specify the output directory for compiled files
      "strict": true,                           // Enable all strict type-checking options
      "esModuleInterop": true,                  // Enables interop between CommonJS and ES Modules
      "forceConsistentCasingInFileNames": true, // Ensure consistent casing in imports
      "skipLibCheck": true                      // Skip type checking of declaration files
    },
    "include": ["src"],                         // Specify files to include in the compilation
    "exclude": ["node_modules", "dist"]         // Exclude specific files/directories
  }
  